<div class="profileTabContainer">
    <div class="items" id="selProfileTab">Posts</div>
    <a href="/profile/{{username}}/replies?currentuser={{currentuser}}" class="no-style">
        <div class="items">Replies</div>
    </a>
    <a href="/profile/{{username}}/upvotes?currentuser={{currentuser}}" class="no-style">
        <div class="items">Upvotes</div>
    </a> 
</div>
<hr>
<div class="profilePosts">
    {{#if posts.length}}
        {{#each posts}}
            {{> post currentuser=../currentuser}}
        {{/each}}
    {{else}}
        <p>No results found.</p>
    {{/if}}
</div>