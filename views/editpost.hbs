<body class="profilePage">
    {{> header}}
    {{> navbar}}
    <profile>
        <div class="editPostContainer">
            <form class="editPost" id="editForm" method="POST" action="/post/{{posteruser}}/{{postid}}/edit">
                <span class="pageHeader">Edit your post</span>
                <input class="postTitle" name="postTitle" value="{{post.title}}" type="text" required>
                <textarea class="postDesc" name="postDesc" id="postDesc">{{post.content}}</textarea>

                <footer>
                    <select class="postSelect" name="community" id="postCommunity">
                        {{#each communities}}
                            <option value="{{_id}}" {{#if (eq _id ../post.community._id)}}selected{{/if}}>{{name}}</option>
                        {{/each}}
                    </select>
                    <input id="postButton" type="submit" value="Post"> 
                </footer>
            </form>
        </div>
    </profile>
</body>

<script src="/js/dropdown.js"></script>
