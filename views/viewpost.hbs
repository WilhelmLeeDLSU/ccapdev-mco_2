<body class="mainPage">
    {{> header}}
    {{> navbar}}
    <div class="homeContainer">
        <div class="homePosts">
            <div class="backPost">
                <a href="/" class="no-style">
                    <img src="https://www.iconpacks.net/icons/2/free-arrow-left-icon-3099-thumb.png">
                </a>
                <span><b>Post</b></span>
            </div>
            <!-- main post -->
            {{> post}}
            <!-- post reply -->
            <div class="postAReply">
                <input type="text" placeholder="Post to reply...">
                <button type="submit">Reply</button>
            </div>
            <!-- replies-->
            {{#each repliesToPost}}
                {{> reply}}
            {{/each}}
            
    <!--{{> communities}}-->
</body>