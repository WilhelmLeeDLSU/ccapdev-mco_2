<div class="postContainer">
    <div class="post" onclick="window.location.href='/profile/{{author.username}}/post/{{_id}}';">
        <img class="pfp" src="{{author.pfp}}" alt="shrek">
        <div class="poster">
            <a href="/profile/{{author.username}}" class="no-style">
                <b>{{author.profileName}}</b> <span>@{{author.username}}</span> 
            </a> 
            <span>{{timeCreated}}</span>
            <div class="tags">
                <span class="tag" style="background: {{community.color}};">{{community.name}}</span>
            </div>
        </div>
        <div></div>
        <div class="postContent">
            <h3>{{title}}</h3>
            <p>{{content}}</p>
        </div>
        <div></div>
        {{> post-actions}}
    </div>
</div>