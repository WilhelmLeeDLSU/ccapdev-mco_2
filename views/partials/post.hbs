<div class="postContainer">
    <div class="post" onclick="window.location.href='/profile/{{author.username}}/post/{{_id}}?currentuser={{currentuser}}';">
        <img class="pfp" src="{{author.pfp}}" alt="shrek">
        <div class="poster">
            <a href="/profile/{{author.username}}?currentuser={{currentuser}}" class="no-style">
                <b class="profileName">{{author.profileName}}</b> <span class="username">@{{author.username}}</span> 
            </a> 
            <span>{{timeCreated}}</span>
            <div class="tags">
                <a href="/community/{{community.name}}?currentuser={{currentuser}}" >
                    <span class="tags tag" style="background: {{community.color}};">{{community.name}}</span>
                </a>
            </div>
        </div>
        <div></div>
        <div class="postContent">
            <h3>{{title}}</h3>
            <p>{{content}}</p>
        </div>
        <div></div>
        {{> post-actions currentuser=currentuser}}
    </div>
</div>