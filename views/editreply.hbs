<body class="profilePage">
    {{> header}}
    {{> navbar}}
    <profile>
        <div class="editReplyContainer">
            <form class="editReply" id="editReplyForm" method="POST" action="/reply/{{posteruser}}/{{repid}}/edit">
                <span class="pageHeader">Edit your reply</span>
                <textarea class="replyDesc" name="replyDesc" id="replyDesc" required>{{reply.content}}</textarea>
                <footer>
                    <input id="postButton" type="submit" value="Post"> 
                </footer>
            </form>
        </div>
    </profile>
</body>
